@model HomeViewModel

@await Component.InvokeAsync("Slide")

@await Component.InvokeAsync("Summary")

@await Component.InvokeAsync("GeneralInfo")

@await Component.InvokeAsync("Solution")

@await Component.InvokeAsync("Procedure")

@await Component.InvokeAsync("Question")

@await Component.InvokeAsync("Problem")

<div class="container mt-30">
    <div class="row">
        <div class="col-md-4">
            <h2 class="text-center">VIDEO</h2>
            <div class="card">
                <div class="card-body">
                    <iframe width="100%" height="386" src="https://www.youtube.com/embed/2xl2IZ3B8uA" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <h2 class="text-center">Thành Tựu</h2>
            <div class="row">
                @foreach (var item in Model.NewsList)
                {
                    <div class="col-md-6">
                        <div class="card news">
                            <img src="~/images/news/@item.Avatar" class="card-img-top" alt="Image">
                            <div class="card-body">
                                <h5 class="card-title"><a href="/tin-tuc/@item.UrlAlias">@item.Title</a></h5>
                                <p class="card-text">
                                    @item.Description
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-md-12 text-center mt-30">
                    <a href="/tin-tuc" class="btn bg-green">Xem Thêm >>></a>
                </div>
            </div>
        </div>
    </div>
</div>

